<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info_window_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blackText"
            android:textSize="@dimen/bigText" />

        <TextView
            android:id="@+id/info_window_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxWidth="160dp"
            android:singleLine="false"
            android:text="sfgdfgjklf; askdj;gnlaskdjgb ;kasdjbgakdjbg"
            android:textColor="@color/grayText"
            android:textSize="@dimen/smallText" />

    </LinearLayout>

    <CheckBox
        android:id="@+id/info_window_visited_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:button="@drawable/visited_checkbox_drawable" />
</LinearLayout>